{
  "name": "angular-cli-lib",
  "version": "1.1.11",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/chase2981/angular-cli-lib"
  },
  "scripts": {
    "commit": "git-cz",
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --prod",
    "test": "npm run test-ci",
    "test-ci": "ng test --single-run --code-coverage --reporters=progress,junit,coverage-istanbul",
    "posttest": "codecov -t b520543a-ee6f-4df2-ab67-64825cfac451",
    "prepush": "npm run test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "packagr": "ng-packagr -p ./src/app/lib/ng-package.json",
    "postinstall": "npm run packagr",
    "semantic-release": "cd ./dist && semantic-release",
    "release": "standard-version -a",
    "postrelease": "git add . && git push --follow-tags origin master"
  },
  "private": false,
  "readme": "README.md",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@angular/animations": "^5.2.0",
    "@angular/common": "^5.2.0",
    "@angular/compiler": "^5.2.0",
    "@angular/core": "^5.2.0",
    "@angular/forms": "^5.2.0",
    "@angular/http": "^5.2.0",
    "@angular/platform-browser": "^5.2.0",
    "@angular/platform-browser-dynamic": "^5.2.0",
    "@angular/router": "^5.2.0",
    "@turbonemesis/angular-cli-lib": "file:turbonemesis-angular-cli-lib-1.0.0-alpha.1.tgz",
    "core-js": "^2.4.1",
    "rxjs": "^5.5.6",
    "zone.js": "^0.8.19"
  },
  "devDependencies": {
    "@angular/cli": "~1.7.3",
    "@angular/compiler-cli": "^5.2.0",
    "@angular/language-service": "^5.2.0",
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "codecov": "^3.0.0",
    "codelyzer": "^4.0.1",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.1.0",
    "husky": "^0.14.3",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-junit-reporter": "^1.2.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "ng-packagr": "^2.2.0",
    "protractor": "~5.1.2",
    "semantic-release": "^15.1.4",
    "standard-version": "^4.4.0",
    "ts-node": "~4.1.0",
    "tslint": "~5.9.1",
    "typescript": "~2.5.3"
  }
}
